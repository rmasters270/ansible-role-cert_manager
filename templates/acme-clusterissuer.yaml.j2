apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ cluster_issuer_name }}
spec:
  acme:
    email: {{ letsencrypt.email }}
    server: {{ cert_issuer_server }}

    privateKeySecretRef:
      name: issuer-account-key
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: cloudflare-api-key-secret
              key: email
            apiTokenSecretRef:
              name: cloudflare-api-key-secret
              key: api-token
